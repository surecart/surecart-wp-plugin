{
	"name": "@checkout-engine/plugin",
	"private": true,
	"engines": {
		"node": ">=12"
	},
	"prettier": "@wordpress/prettier-config",
	"scripts": {
		"lerna": "lerna",
		"postinstall": "lerna exec yarn link --scope=@checkout-engine/{components,react} && lerna exec yarn link @checkout-engine/components --scope @checkout-engine/react && lerna exec && yarn link @checkout-engine/react",
		"bootstrap": "lerna exec yarn install && lerna link",
		"wp-env": "wp-env",
		"start": "wp-env start --xdebug && lerna run watch --stream --parallel",
		"docs": "lerna run docs --stream --parallel --ignore @checkout-engine/plugin",
		"docs:build": "yarn --cwd packages/components build && yarn --cwd packages/docs upgrade @checkout-engine/components && yarn --cwd packages/docs build",
		"watch": "cross-env NODE_ENV=development webpack --colors --config .dev/build/webpack.development.js",
		"hot": "cross-env NODE_ENV=development WPEMERGE_ENV=hot webpack-dev-server --colors --config .dev/build/webpack.development.js",
		"build:core": "cross-env WPEMERGE_COMBINED_BUILD=1 run-s -l build:debug build:production",
		"build:debug": "cross-env NODE_ENV=production WPEMERGE_ENV=debug webpack --colors --config .dev/build/webpack.production.js",
		"build:production": "cross-env NODE_ENV=production webpack --colors --config .dev/build/webpack.production.js",
		"lint": "run-s -cl lint:wpcs lint:scripts lint:styles",
		"lint-fix": "run-s -cl lint-fix:wpcs lint-fix:scripts lint-fix:styles",
		"lint:wpcs": "./vendor/bin/phpcs --colors --standard=phpcs.xml ./",
		"lint:scripts": "eslint --color ./resources/scripts/**",
		"lint:styles": "stylelint --color ./resources/styles/**",
		"lint-fix:wpcs": "./vendor/bin/phpcbf --colors --standard=phpcs.xml ./",
		"lint-fix:scripts": "eslint --color --fix ./resources/scripts/**",
		"lint-fix:styles": "stylelint --color --fix ./resources/styles/**",
		"i18n": "run-s -cl i18n:textdomain i18n:pot",
		"i18n:textdomain": "wpi18n addtextdomain --exclude=dist,node_modules,resources,tests,vendor --textdomain=checkout_engine",
		"i18n:pot": "wpi18n makepot --exclude=dist,node_modules,resources,tests,vendor --type=wp-plugin --domain-path=languages/ --pot-file=checkout_engine.pot --textdomain=checkout_engine",
		"rebrand": "node .dev/build/rebrand/rebrand.js",
		"release:build": "lerna run build",
		"release": "run-s release:build release:zip",
		"release:zip": "node .dev/build/release/release.js blaze-checkout",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:md:js": "wp-scripts lint-md-js",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"test:php": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/checkout-engine/phpunit.xml --testdox'",
		"test:php:failing": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/checkout-engine/phpunit.xml --group=failing' --verbose",
		"test:cypress": "wp-env start --xdebug && cypress run --config video=false --browser chrome",
		"test:cypress:record": "wp-env start --xdebug && cypress run --browser chrome --record --key 29b7dee9-7f63-4a24-abd2-bd74c58ec60a",
		"test:cypress:debug": "yarn start & npx cypress open",
		"test:js": "wp-scripts test-unit-js --config jest.config.unit.js",
		"test:js:coverage": "wp-scripts test-unit-js --config jest.config.unit.js --coverage"
	},
	"browserslist": [
		"last 3 versions"
	],
	"dependencies": {
		"@checkout-engine/components": "file:packages/components",
		"@checkout-engine/docs": "file:packages/docs",
		"@checkout-engine/react": "file:packages/integrations/react",
		"@emotion/react": "^11.7.1",
		"@rails/activestorage": "^6.1.4-1",
		"@wordpress/babel-preset-default": "^6.2.0",
		"@wordpress/icons": "^6.1.1",
		"autoprefixer": "^10",
		"babel-loader": "^8.2.3",
		"chokidar": "^3.4.0",
		"classnames": "^2.3.1",
		"clean-webpack-plugin": "^0.1.19",
		"cross-env": "^7.0.2",
		"css-loader": "^3.5.3",
		"cssnano": "^4.1.10",
		"dot-prop-immutable": "^2.1.1",
		"feather-icons": "^4.28.0",
		"file-loader": "^6.0.0",
		"history": "^5.0.0",
		"imagemin-mozjpeg": "^8.0.0",
		"imagemin-webpack-plugin": "^2.1.1",
		"import-glob": "^1.5.0",
		"lerna": "^4.0.0",
		"loader-utils": "^1.1.0",
		"lodash": "^4.17.15",
		"mini-css-extract-plugin": "^0.9.0",
		"node-sass": "^6.0.1",
		"normalizr": "^3.6.1",
		"npm-run-all": "^4.1.3",
		"path-to-regexp": "^6.2.0",
		"postcss": "^8.0.1",
		"postcss-discard-comments": "^4",
		"postcss-loader": "^4.2.0",
		"querystringify": "^2.2.0",
		"sass-loader": "^10",
		"svg-sprite-loader": "^4.2.5",
		"thread-loader": "^3.0.4",
		"tmp": "^0.2.1",
		"webpack": "^4.26.1",
		"webpack-assets-manifest": "^3.1.1",
		"webpack-cli": "^3.1.2",
		"webpack-spritesmith": "^0.4.1"
	},
	"devDependencies": {
		"@emotion/babel-plugin": "^11.3.0",
		"@emotion/core": "^10.1.1",
		"@emotion/css": "^10.0.22",
		"@emotion/hash": "^0.8.0",
		"@emotion/native": "^10.0.22",
		"@emotion/styled": "^10.0.23",
		"@wordpress/data": "^6.1.0",
		"@wordpress/dependency-extraction-webpack-plugin": "^3.2.1",
		"@wordpress/e2e-test-utils": "^5.4.1",
		"@wordpress/env": "^4.0.5",
		"@wordpress/scripts": "^18.0.1",
		"archiver": "^4.0.1",
		"chalk": "^4.0.0",
		"change-case": "^4.1.1",
		"co": "^4.6.0",
		"copy-webpack-plugin": "6",
		"cypress": "^9.1.0",
		"cypress-file-upload": "^5.0.8",
		"cypress-log-to-output": "^1.1.2",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.19.0",
		"glob": "^7.1.4",
		"inquirer": "^7.1.0",
		"node-wp-i18n": "^1.2.1",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-test-renderer": "17.0.1",
		"replace-in-file": "^6.0.0",
		"shelljs": "^0.8.3",
		"stylelint": "^13.3.3",
		"stylelint-config-recommended-scss": "^4.2.0",
		"stylelint-order": "^4.0.0",
		"stylelint-scss": "^3.17.1",
		"webpack-dev-server": "^3.10.3"
	},
	"resolutions": {
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"eslint-plugin-jsdoc": "^37.4.2",
		"react-test-renderer": "17.0.1"
	},
	"wp-env": {
		"plugin-dir": "checkout-engine",
		"plugin-name": "Checkout Engine",
		"welcome-logo": [
			"E2E Tests Example"
		],
		"welcome-build-command": "npm run dev"
	}
}
