{
	"version": "0.16.2",
	"type": "wordpress-plugin",
	"keywords": [
		"wordpress",
		"plugin",
		"starter plugin",
		"wpemerge"
	],
	"license": "GPL-2.0-only",
	"require": {
		"php": ">=5.5",
		"composer/installers": "^1.4",
		"checkout-engine/blocks": "*",
		"htmlburger/wpemerge": "dev-master",
		"htmlburger/wpemerge-app-core": "dev-master",
		"htmlburger/wpemerge-blade": "dev-master"
	},
	"repositories": [
		{
			"type": "path",
			"url": "./packages/blocks",
			"options": {
				"symlink": false
			}
		},
		{
			"type": "path",
			"url": "./packages/framework/wpemerge",
			"options": {
				"symlink": false
			}
		},
		{
			"type": "path",
			"url": "./packages/framework/wpemerge-app-core",
			"options": {
				"symlink": false
			}
		}
	],
	"require-dev": {
		"filp/whoops": "^2.2",
		"htmlburger/wpemerge-cli": "~0.16.0",
		"wp-phpunit/wp-phpunit": "5.8.3",
		"wp-cli/wp-cli-bundle": "*",
		"mockery/mockery": "^1.4",
		"symfony/debug": "~3.0",
		"wp-coding-standards/wpcs": "^2.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
		"phpstan/phpstan": "^1.2",
		"szepeviktor/phpstan-wordpress": "^1.0",
		"yoast/phpunit-polyfills": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"CheckoutEngine\\": "app/src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CheckoutEngine\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"analyse": "php -d memory_limit=4G vendor/bin/phpstan analyse",
		"install-test-env": [
			"wpemerge config:create"
		],
		"install-dev-env": [
			"@php wpemerge config:create",
			"@php wpemerge install:dependencies",
			"@php wpemerge assets:build"
		],
		"post-create-project-cmd": "@install-dev-env"
	}
}
