{
	"version": "0.16.2",
	"type": "wordpress-plugin",
	"keywords": ["wordpress", "plugin", "checkout engine"],
	"license": "GPL-2.0-only",
	"require": {
		"php": ">=5.5",
		"composer/installers": "^1.4",
		"checkout-engine/blocks": "*"
	},
	"repositories": [
		{
			"type": "path",
			"url": "./packages/blocks"
		}
	],
	"require-dev": {
		"filp/whoops": "^2.2",
		"wp-phpunit/wp-phpunit": "5.7.1",
		"wp-cli/wp-cli-bundle": "*",
		"mockery/mockery": "^1.4",
		"symfony/debug": "~3.0",
		"wp-coding-standards/wpcs": "^2.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
		"phpstan/phpstan": "^1.2",
		"szepeviktor/phpstan-wordpress": "^1.0",
		"yoast/wp-test-utils": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"CheckoutEngine\\": "app/src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CheckoutEngine\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"analyse": "php -d memory_limit=4G vendor/bin/phpstan analyse"
	}
}
