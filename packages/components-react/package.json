{
	"name": "@surecart/components-react",
	"sideEffects": false,
	"version": "0.0.5",
	"description": "React specific wrapper for surecart/components",
	"repository": {
		"type": "git",
		"url": "https://github.com/surecart/surecart-wp.git"
	},
	"scripts": {
		"release": "yarn build",
		"build": "yarn clean && yarn compile",
		"docs:release": "yarn run build",
		"clean": "rm -rf dist",
		"compile": "yarn tsc",
		"tsc": "tsc -p .",
		"rollup": "rollup -c"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.es.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/",
		"src/"
	],
	"dependencies": {
		"@surecart/components": "workspace:^"
	},
	"devDependencies": {
		"@types/jest": "23.3.9",
		"@types/node": "^15.12.2",
		"@types/react": "^17.0.34",
		"@types/react-dom": "^17.0.11",
		"np": "^3.1.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"typescript": "^3.3.4000"
	},
	"peerDependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"jest": {
		"preset": "ts-jest",
		"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
		"testPathIgnorePatterns": [
			"node_modules",
			"dist"
		]
	}
}
