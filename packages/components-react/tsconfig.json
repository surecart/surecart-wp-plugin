{
  "extends": "../components/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxFactory": null,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "./dist/types",
    "declaration": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
