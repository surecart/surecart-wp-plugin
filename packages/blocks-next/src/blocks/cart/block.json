{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "surecart/cart-v2",
	"title": "SureCart Cart v2",
	"description": "Display SureCart Cart",
	"version": "1.0.0",
	"category": "cart",
	"icon": "media-interactive",
	"example": {},
	"providesContext": {
		"surecart/cart-v2/blockId": "cart-v2"
	},
	"usesContext": ["surecart/cart-v2/blockId"],
	"attributes": {
		"title": {
			"type": "string",
			"default": "Cart"
		},
		"width": {
			"type": "string",
			"default": "500px"
		}
	},
	"supports": {
		"interactivity": true,
		"layout": true,
		"align": true,
		"spacing": {
			"padding": true,
			"margin": ["top", "bottom"],
			"blockGap": true
		}
	},
	"allowedBlocks": [
		"surecart/cart-header-v2",
		"surecart/cart-items-v2",
		"surecart/cart-coupon-v2",
		"surecart/cart-subtotal-v2"
	],
	"render": "file:./view.php",
	"textdomain": "surecart",
	"editorScript": "file:./index.js",
	"style": ["file:./index.css"],
	"viewScriptModule": ["@surecart/cart"]
}
