{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 3,
	"name": "surecart/slide-out-cart-line-items",
	"title": "Cart Items",
	"description": "The cart items",
	"category": "surecart-cart",
	"version": "1.0.0",
	"example": {},
	"textdomain": "surecart",
	"ancestor": ["surecart/slide-out-cart"],
	"providesContext": {
		"editable": "editable",
		"removable": "removable"
	},
	"attributes": {
		"removable": {
			"type": "boolean",
			"default": true
		},
		"editable": {
			"type": "boolean",
			"default": true
		},
		"divider_enabled": {
			"type": "boolean",
			"default": true
		},
		"border": {
			"type": "boolean",
			"default": true
		},
		"padding": {
			"type": "object",
			"default": {
				"top": "1.25em",
				"left": "1.25em",
				"bottom": "1.25em",
				"right": "1.25em"
			}
		},
		"backgroundColor": {
			"type": "string"
		},
		"textColor": {
			"type": "string"
		}
	},
	"supports": {
		"interactivity": true,
		"html": false,
		"multiple": false,
		"layout": {
			"allowSizingOnChildren": false
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"blockGap": {
				"__experimentalDefault": "1.25em"
			}
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontWeight": true
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"color": {
			"text": true,
			"background": true,
			"enableContrastChecker": true
		}
	},
	"render": "file:./view.php",
	"editorScript": "file:./index.js",
	"style": [
		"file:../../styles/line-item.css",
		"file:../../styles/product-line-item.css",
		"file:../../styles/input-group.css",
		"file:../../styles/quantity-selector.css",
		"file:./style-index.css"
	],
	"viewScriptModule": ["@surecart/cart"]
}
