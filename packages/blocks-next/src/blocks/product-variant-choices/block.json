{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "surecart/product-variant-choices-v2",
	"title": "Product Variants",
	"description": "Displays possible choices for product variants.",
	"version": "1.0.0",
	"category": "widgets",
	"icon": "media-interactive",
	"ancestor": ["surecart/product-page"],
	"supports": {
		"interactivity": true,
		"html": false,
		"layout": {
			"allowSwitching": false,
			"allowInheriting": false,
			"default": {
				"type": "flex"
			}
		},
		"color": {
			"__experimentalDefaultControls": {
				"background": true,
				"color": true
			}
		},
		"spacing": {
			"blockGap": {
				"__experimentalDefault": "3px"
			},
			"margin": ["top", "bottom"],
			"padding": ["horizontal", "vertical"]
		},
		"__experimentalBorder": {
			"width": true,
			"color": true,
			"radius": true,
			"__experimentalDefaultControls": {
				"radius": true,
				"color": true,
				"width": true
			}
		}
	},
	"textdomain": "surecart",
	"editorScript": "file:./index.js",
	"style": [
		"file:../../styles/pill.css",
		"file:../../styles/label.css",
		"file:../../styles/product-variants.css"
	]
}
