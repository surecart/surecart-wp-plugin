{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "surecart/product-sale-badge",
	"title": "Sale Badge",
	"description": "Display a badge if the product is currently on sale",
	"version": "1.0.0",
	"category": "widgets",
	"icon": "tag",
	"ancestor": ["surecart/product-page"],
	"example": {
		"attributes": {
			"text": "Sale"
		}
	},
	"attributes": {
		"text": {
			"type": "string",
			"default": "Sale"
		}
	},
	"supports": {
		"interactivity": true,
		"color": {
			"gradients": true,
			"text": true,
			"background": true,
			"__experimentalDefaultControls": {
				"text": true,
				"background": true
			}
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		},
		"shadow": true,
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		}
	},
	"textdomain": "surecart",
	"render": "file:./view.php",
	"editorScript": "file:./index.js",
	"style": ["file:../../styles/tag.css"]
}
