{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "surecart/product-price-choice-template",
	"title": "Price Template",
	"description": "Displays the price of a product with a choice of options.",
	"version": "1.0.0",
	"category": "widgets",
	"icon": "media-interactive",
	"usesContext": ["surecart/productId", "surecart/product", "surecart/price"],
	"ancestor": ["surecart/product-price-choices-template"],
	"example": {
		"attributes": {}
	},
	"attributes": {
		"highlight_border": {
			"type": "string"
		}
	},
	"supports": {
		"interactivity": true,
		"spacing": {
			"padding": true,
			"margin": false,
			"__experimentalDefaultControls": {
				"padding": true
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"width": true
			}
		},
		"color": {
			"gradients": true,
			"text": true,
			"background": true,
			"__experimentalDefaultControls": {
				"text": true,
				"background": true
			}
		}
	},
	"textdomain": "surecart",
	"render": "file:./view.php",
	"editorScript": "file:./index.js",
	"style": ["file:../../styles/choice.css", "file:./style-index.css"]
}
