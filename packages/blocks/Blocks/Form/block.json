{
	"name": "surecart/form",
	"title": "Form",
	"description": "Displays a form.",
	"category": "surecart",
	"parent": ["surecart/checkout-form"],
	"keywords": ["email", "mail"],
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"mode": {
			"type": "string",
			"enum": ["test", "live"],
			"default": "live"
		},
    "success_url": {
      "type": "string"
    },
		"prices": {
			"type": "array"
		},
		"gap": {
			"type": "string",
			"default": "25px"
		},
		"currency": {
			"type": "string"
		},
    "color": {
      "type": "string"
    }
	}
}
