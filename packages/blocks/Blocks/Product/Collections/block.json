{
	"apiVersion": 2,
	"name": "surecart/product-collections",
	"title": "Product Collections",
	"description": "Displays product collection selector for a product.",
	"category": "surecart",
	"keywords": ["collection", "form", "product"],
	"attributes": {
		"size": {
			"type": "string",
			"default": "small"
		},
		"pill": {
			"type": "boolean",
			"default": false
		},
		"type": {
			"type": "string",
			"default": "primary"
		},
		"collectionCount": {
			"type": "number",
			"default": 4
		},
		"textColor": {
			"type": "string"
		},
		"backgroundColor": {
			"type": "string"
		}
	},
	"supports": {
		"reusable": false,
		"html": false,
		"multiple": false,
		"color": {
			"__experimentalSkipSerialization": true,
			"gradients": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		}
	}
}
