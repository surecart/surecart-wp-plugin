{
	"apiVersion": 2,
	"name": "surecart/product-info",
	"title": "Product Information",
	"description": "A container to display product information",
	"category": "surecart",
	"keywords": ["price", "product"],
	"script": "surecart-components",
	"editorStyle": "surecart-themes-default",
	"attributes": {
		"media_position": {
			"type": "string",
			"enum": ["left", "right"],
			"default": "left"
		},
		"media_width": {
			"type": "stringr",
			"default": "65%"
		},
		"column_gap": {
			"type": "string",
			"default": "2em"
		},
		"sticky_content": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"reusable": false,
		"html": false,
		"multiple": false,
		"align": true,
		"color": {
			"gradients": true,
			"link": false,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true,
				"link": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true,
			"blockGap": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true,
				"fontAppearance": true,
				"textTransform": true
			}
		}
	}
}
