{
	"apiVersion": 2,
	"name": "surecart/product-buy-buttons",
	"title": "Product Buy Buttons",
	"description": "Displays product buy and add to cart buttons",
	"category": "surecart",
	"ancestor": ["surecart/product-info"],
	"keywords": ["button", "buy", "product"],
	"attributes": {
		"text": {
			"type": "string",
			"default": "Add To Cart"
		},
		"type": {
			"type": "string",
			"default": "primary"
		},
		"size": {
			"type": "string",
			"default": "large"
		},
		"full": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"reusable": false,
		"html": false,
		"multiple": false,
		"align": true,
		"alignWide": false,
		"color": {
			"__experimentalSkipSerialization": true,
			"gradients": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"typography": {
			"fontSize": true
		},
		"__experimentalBorder": {
			"radius": true,
			"__experimentalSkipSerialization": true,
			"__experimentalDefaultControls": {
				"radius": true
			}
		}
	}
}
