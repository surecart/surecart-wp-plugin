{
	"apiVersion": 2,
	"name": "surecart/product-media",
	"title": "Product Media",
	"description": "A container to display the product media",
	"category": "surecart",
	"keywords": ["image", "media"],
	"supports": {
		"reusable": false,
		"html": false,
		"multiple": false,
		"color": {
			"gradients": true,
			"link": false,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true,
				"link": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalFontWeight": true,
			"__experimentalFontStyle": true,
			"__experimentalTextTransform": true,
			"__experimentalTextDecoration": true,
			"__experimentalLetterSpacing": true,
			"__experimentalDefaultControls": {
				"fontSize": true,
				"fontAppearance": true,
				"textTransform": true
			}
		}
	},
	"attributes": {
		"auto_height": {
			"type": "boolean",
			"default": true
		},
		"height": {
			"type": "string",
			"default": "310px"
		},
		"thumbnails_per_page": {
			"type": "number",
			"default": 5
		}
	}
}
