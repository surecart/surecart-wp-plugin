{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "surecart/product-item",
	"title": "Product Item",
	"description": "Displays a single product item.",
	"category": "surecart",
	"keywords": ["product", "item", "lite item"],
	"ancestor": ["surecart/product-item-list"],
	"supports": {
		"reusable": false,
		"html": false,
		"spacing": {
			"padding": true,
			"margin": true,
			"__experimentalDefault": "2em",
			"__experimentalDefaultControls": {
				"padding": true,
				"margin": true
			}
		},
		"color": {
			"__experimentalDuotone": "img",
			"text": false,
			"background": false
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"width": true,
			"__experimentalSelector": ".product-img",
			"__experimentalSkipSerialization": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"width": true
			}
		}
	}
}
