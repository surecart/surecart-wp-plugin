{
	"apiVersion": 2,
	"name": "surecart/new-donation",
	"title": "New Donation",
	"description": "Displays a donation amount for the user to choose from.",
	"category": "surecart",
	"ancestor": ["surecart/form"],
	"keywords": ["donation", "ad hoc", "custom", "amount"],
	"textdomain": "surecart",
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"amount_label": {
			"type": "string",
			"default": "Donation Amount"
		},
		"recurring_label": {
			"type": "string",
			"default": "Make it recurring"
		},
		"recurring_choice_label": {
			"type": "string",
			"default": "Yes, count me in!"
		},
		"non_recurring_choice_label": {
			"type": "string",
			"default": "No, donate once"
		},
		"amount_columns": {
			"type": "number",
			"default": 3
		},
		"product_id": {
			"type": "string"
		},
		"currency": {
			"type": "string",
			"default": "USD"
		}
	}
}
