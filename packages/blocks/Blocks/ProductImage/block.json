{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "surecart/product-image",
	"title": "Product Image",
	"description": "Displays a product image.",
	"category": "surecart",
	"keywords": ["product", "image", "thumbnail"],
	"ancestor": ["surecart/product-list"],
	"attributes": {
		"src": {
			"type": "string"
		},
		"sizing": {
			"type": "string"
		},
		"alt": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
		"reusable": false,
		"html": false,
		"spacing": {
			"padding": true,
			"margin": true,
			"__experimentalDefaultControls": {
				"padding": true,
				"margin": true
			}
		},
		"color": {
			"__experimentalDuotone": "img",
			"text": false,
			"background": false
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"width": true,
			"__experimentalSelector": ".product-img",
			"__experimentalSkipSerialization": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"width": true
			}
		}
	}
}
