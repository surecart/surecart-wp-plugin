{
	"name": "surecart/input",
	"title": "Input",
	"description": "Displays a form text input.",
	"category": "surecart",
	"keywords": ["email", "mail"],
	"ancestor": ["surecart/form"],
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"required": {
			"type": "boolean"
		},
		"value": {
			"type": "string",
			"default": ""
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"disabled": {
			"type": "boolean",
			"default": false
		},
		"size": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Input"
		},
		"help": {
			"type": "string"
		},
		"inputmode": {
			"type": "string"
		},
		"max": {
			"type": ["string", "number"]
		},
		"maxlength": {
			"type": "number"
		},
		"name": {
			"type": "string",
			"default": "input"
		}
	}
}
