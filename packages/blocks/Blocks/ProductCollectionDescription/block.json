{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "surecart/product-collection-description",
	"title": "Collection Description",
	"description": "Displays the collection description.",
	"category": "surecart",
	"keywords": ["collection", "description", "list"],
	"ancestor": ["surecart/product-collection"],
	"attributes": {
		"title": {
			"type": "string"
		},
		"align": {
			"type": "string"
		}
	},
	"supports": {
		"spacing": {
			"padding": true,
			"margin": ["top", "bottom"]
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontWeight": true
		},
		"color": {
			"text": true,
			"background": false,
			"enableContrastChecker": true
		}
	}
}
