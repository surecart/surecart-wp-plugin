{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "checkout-engine/order-confirmation-line-items",
	"title": "Order Confirmation Line Items",
	"description": "Display an order confirmation line items summary section.",
	"category": "layout",
	"keywords": [ "thank", "thank you", "confirm" ],
	"supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"title": {
			"type": "string",
			"default": "Order Confirmation"
		},
		"description": {
			"type": "string",
			"default": "Thank you for your order!"
		},
		"button_enabled": {
			"type": "boolean",
			"default": true
		},
		"button_text": {
			"type": "string",
			"default": "Manage Orders"
		}
	}
}
