
{
  "apiVersion": 2,
	"name": "checkout-engine/button",
	"title": "Button",
  "description": "Display a checkout form button.",
	"category": "layout",
  "keywords": ["button", "submit", "checkout", "engine"],
  "supports": {
		"reusable": false,
		"html": false
	},
	"attributes": {
		"text": {
			"type": "string",
			"default": "Purchase"
		},
		"type": {
			"type": "string",
			"default": "primary"
		},
		"submit": {
			"type": "boolean",
			"default": true
		},
		"size": {
			"type": "string",
			"default": "large"
		},
		"full": {
			"type": "boolean",
			"default": true
		}
	}
}
